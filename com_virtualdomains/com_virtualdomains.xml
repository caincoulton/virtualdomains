<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="1.6.0" method="upgrade">
    <name>Virtual Domains</name>
    <creationDate>2011-04-07</creationDate>
    <author>Michael Liebler, romacron, Cain Coulton</author>
    <authorEmail>michael-liebler@janguo.de, cain@coultoncreation.com</authorEmail>
    <authorUrl>http://www.janguo.de, https://coultoncreation.com</authorUrl>
    <copyright>Copyright (C) 2010 Open Source Matters. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>{VERSION}</version>
    <description>Multi Domain Support for Joomla</description>

    <namespace path="src/">Janguo\Component\VirtualDomains</namespace>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates</schemapath>
        </schemas>
    </update>

    <files folder="site">
        <folder>src</folder>
        <filename>virtualdomains.php</filename>
    </files>

    <scriptfile>install.script.php</scriptfile>

    <media destination="com_virtualdomains" folder="media">
        <folder>js</folder>
    </media>

    <administration>
        <menu view="virtualdomains">Virtualdomains</menu>
        <submenu>
            <menu view="virtualdomains">Virtualdomains</menu>
            <menu view="params">Params</menu>
            <menu view="about">About</menu>
        </submenu>

        <files folder="admin">
            <folder>forms</folder>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>install.script.php</filename>
        </files>

        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_virtualdomains.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_virtualdomains.sys.ini</language>
            <language tag="de-DE">de-DE/de-DE.com_virtualdomains.ini</language>
            <language tag="de-DE">de-DE/de-DE.com_virtualdomains.sys.ini</language>
            <language tag="bg-BG">bg-BG/bg-BG.com_virtualdomains.ini</language>
            <language tag="bg-BG">bg-BG/bg-BG.com_virtualdomains.sys.ini</language>
        </languages>

    </administration>

</extension>
