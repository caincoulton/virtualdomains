<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="general" label="GENERAL" description="GENERAL">

		<field 
			name="override" 
			type="list"
			default="2"
			size="1"
			label="JFIELD_VDOVERRIDE_TEMPLATESTYLES_LABEL"
			description="JFIELD_VDOVERRIDE_TEMPLATESTYLES_Desc"
		>
			<option value="2">JFIELD_OVERRIDE_YES</option>
			<option value="1">JFIELD_OVERRIDE_HOME</option>
			<option value="0">JFIELD_OVERRIDE_NO</option>
		</field>

		<field
			name="denyadminaccess"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			default="0"
			label="JFIELD_FULLACCESSBACKEND_LABEL"
			description="JFIELD_FULLACCESSBACKEND_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="stripmenuroot"
			label="Remove menu root"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			default="0"
			description="Remove the root menu item from the SEF URL"
			filter="boolean"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

	</fieldset>

	<fieldset name="PREVIEW_OPTIONS" label="PREVIEW_OPTIONS"
		description="PREVIEW_OPTIONS">

		<field
			name="framewidth"
			type="text"
			default="600"
			label="FRAMEWIDTH"
			description="FRAMEWIDTH_DESC"
		/>

		<field
			name="frameheight"
			type="text"
			default="400"
			label="FRAMEHEIGHT"
			description="FRAMEHEIGHT_DESC"
		/>

	</fieldset>
</config>
